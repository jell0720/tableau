<script>

var viz, workbook, activeSheet, Worksheet, worksheet;;
var placeholderDiv = document.getElementById("tableauViz");
var url = "https://public.tableausoftware.com/views/Rotate/Rotate?:showVizHome=no";
var options = {
   width: "600px",   
   height: "600px",
   hideTabs: true,
  onFirstInteractive: function () {
  workbook = viz.getWorkbook();
  activeSheet = workbook.getActiveSheet();
runit();
}
  };
               viz = new tableauSoftware.Viz(placeholderDiv, url, options);
i=360;
function runit() {
if(i<361) {
window.setTimeout("runit()","4000");
runit1(i);
i--;
}
}
function runit1(a) {
var worksheet;
viz.getWorkbook().activateSheetAsync("Rotate").then(function (sheet) {
  worksheet = sheet;
})
.then(function () {
  workbook.changeParameterValueAsync("Rotate", [a]);})
.otherwise(function (err) {alert(err)})
;
if (a==361) {alert("Thank You Noah")};
}
</script>
